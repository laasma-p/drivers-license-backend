<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/output.css" rel="stylesheet" type="text/css" />
    <title>Code generator</title>
  </head>
  <body>
    <header>
      <h1>Generate codes for the theory test authorization</h1>
    </header>
    <main>
      <label for="test-time">Select the test time:</label>
      <select id="test-time"></select>
      <button id="show-test-takers">Find test takers</button>
    </main>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        fetch("/admin/time-slots")
          .then((response) => response.json())
          .then((times) => {
            const timeSelector = document.getElementById("test-time");
            times.forEach((time) => {
              const option = document.createElement("option");
              option.value = time.id;
              option.textContent = `${time.date} at ${time.time}`;
              timeSelector.appendChild(option);
            });
          })
          .catch((error) => {
            console.error("Error fetching time slots:", error);
          });
      });
      document
        .getElementById("show-test-takers")
        .addEventListener("click", () => {
          const timeId = document.getElementById("test-time").value;

          const existingContent = document.getElementById("dynamic-content");
          if (existingContent) {
            existingContent.remove();
          }

          fetch(`/admin/test-takers?bookingId=${timeId}`)
            .then((response) => response.json())
            .then((testTakers) => {
              const dynamicContent = document.createElement("div");
              dynamicContent.id = "dynamic-content";
              document.querySelector("main").appendChild(dynamicContent);

              if (testTakers.length === 0) {
                const message = document.createElement("p");
                message.textContent = "No test takers found for this test.";
                dynamicContent.appendChild(message);
              } else {
                const heading = document.createElement("h2");
                heading.textContent = "Test takers";
                dynamicContent.appendChild(heading);

                const testTakersList = document.createElement("ul");
                testTakers.forEach((testTaker) => {
                  const listItem = document.createElement("li");
                  listItem.textContent = `${testTaker.first_name} ${testTaker.last_name}`;
                  testTakersList.appendChild(listItem);
                });

                dynamicContent.appendChild(testTakersList);

                const generateCodesButton = document.createElement("button");
                generateCodesButton.textContent = "Generate codes";
                generateCodesButton.addEventListener("click", () => {
                  fetch("/admin/generate-codes", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ bookingId: timeId }),
                  })
                    .then((response) => response.json())
                    .then((codes) => {
                      const codesSection = document.getElementById("codes");

                      if (!codesSection) {
                        const codesSection = document.createElement("div");
                        codesSection.id = "codes";
                        const codesHeading = document.createElement("h2");
                        codesHeading.textContent = "Codes";
                        codesSection.appendChild(codesHeading);

                        const codesList = document.createElement("ul");
                        codesList.id = "codes-list";
                        codesSection.appendChild(codesList);

                        dynamicContent.appendChild(codesSection);
                      }

                      const codesList = document.getElementById("codes-list");
                      codesList.innerHTML = "";

                      codes.forEach((code) => {
                        const listItem = document.createElement("li");
                        listItem.textContent = `Code: ${code.generated_code}`;
                        codesList.appendChild(listItem);
                      });
                    })
                    .catch((error) => {
                      console.error("Error generating codes:", error);
                    });
                });

                dynamicContent.appendChild(generateCodesButton);
              }
            })
            .catch((error) => {
              console.error("Error fetching test takers:", error);
            });
        });
    </script>
  </body>
</html>
